# NetGuard Security Platform - Environment Variables
# Prefeitura de Guaramirim - SC

# Application Settings
NODE_ENV=production
PORT=80
APP_NAME=NetGuard Security Platform
APP_VERSION=2.0.0

# Database Configuration
DATABASE_URL=postgresql://netguard:netguard_pass_2024@localhost:5432/netguard_db

# Security Keys
JWT_SECRET=netguard_super_secret_jwt_key_2024
ADMIN_DEFAULT_PASSWORD=admin123

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/netguard.log

# Network Services
PROXY_PORT=3128
ADMIN_PORT=8080
FIREWALL_INTERFACE_WAN=eth1
FIREWALL_INTERFACE_LAN=eth0

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key

# External Services (Optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@guaramirim.sc.gov.br

# Backup Configuration
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# System Information
SYSTEM_HOSTNAME=fw-zeus
SYSTEM_DOMAIN=guaramirim.sc.gov.br
SYSTEM_LOCATION=Prefeitura de Guaramirim - SC
SYSTEM_ADMIN_EMAIL=ti@guaramirim.sc.gov.br
